@model IEnumerable<WebProjesi.Models.TrainerAvailability>

@{
    ViewData["Title"] = "Antrenör Çalışma Saatleri";

    // ViewBag'e bağlı kalma: burada sabit olsun
    string[] TR_DAYS = new[]
    {
        "Pazartesi", "Salı", "Çarşamba", "Perşembe", "Cuma", "Cumartesi", "Pazar"
    };
}

<<h1>Antrenör Çalışma Saatleri</h1>


@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Yeni Çalışma Saatleri</a>
    </p>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Antrenör</th>
            <th>Gün</th>
            <th>Başlangıç</th>
            <th>Bitiş</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(item.Trainer?.FullName ?? "(Antrenör bulunamadı)")</td>
                <td>
                    @{
                        string dayText = (item.DayOfWeek >= 0 && item.DayOfWeek < TR_DAYS.Length)
                        ? TR_DAYS[item.DayOfWeek]
                        : "(Gün bilinmiyor)";
                    }
                    @dayText
                </td>
                <td>@item.StartTime.ToString(@"hh\:mm")</td>
                <td>@item.EndTime.ToString(@"hh\:mm")</td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                        <span> | </span>
                        <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
