<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Spor Salonu</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    Spor Salonu
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">

                    <!-- SOL MENÜ -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <!-- HERKES -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Services" asp-action="Index">
                                Hizmetler
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Trainers" asp-action="Index">
                                Antrenörler
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="TrainerAvailabilities" asp-action="Index">
                                Antrenör Çalışma Saatleri
                            </a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-semibold text-danger"
                                   asp-controller="Appointments" asp-action="Index">
                                    Tüm Randevular
                                </a>
                            </li>
                        }

                        @if (User.Identity!.IsAuthenticated && !User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-semibold"
                                   asp-controller="Appointments" asp-action="My">
                                    Randevularım
                                </a>
                            </li>
                        }

                    </ul>

                    <!-- SAĞ MENÜ (LOGIN) -->
                    <ul class="navbar-nav">
                        <partial name="_LoginPartial" />
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted mt-4">
        <div class="container py-3 text-center">
            © 2025 Spor Salonu Yönetim Sistemi
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
